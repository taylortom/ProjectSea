package com.gamejam.display{	// Flash imports	import flash.display.MovieClip;		import com.gamejam.views.GameView;	/*	 * A basic game object 	 */	public class TemperatureGauge extends MovieClip 	{			public function TemperatureGauge()		{						var gv:GameView = GameView.getInstance();			this.x = gv.stage.stageWidth - (this.width*0.75);			this.y = gv.stage.stageHeight/2;		}				public function update(newState:String):void		{ 			// trace("TemperatureGauge.update: " + newState);						this.gotoAndStop(newState);		}	}}