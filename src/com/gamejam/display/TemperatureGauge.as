package com.gamejam.display{	// Flash imports	import com.gamejam.models.GameModel;	import com.gamejam.utils.map;	import com.gamejam.utils.normalise;	import flash.display.MovieClip;		import com.gamejam.views.GameView;	/*	 * A basic game object 	 */	public class TemperatureGauge extends MovieClip 	{			public function TemperatureGauge()		{						var gv:GameView = GameView.getInstance();			this.x = gv.stage.stageWidth - (this.width*0.75);			this.y = gv.stage.stageHeight/2;		}				public function update(temperature: int):void		{ 			// trace("TemperatureGauge.update: " + newState);				var time : Number = GameModel.timeForPlayerToDie;						this.temperature_icon.rotation = map(temperature, -time, time, 0, 180);		}	}}