package com.gamejam.display{	// Flash imports	import flash.display.MovieClip;	import flash.events.Event;	import com.gamejam.display.GameObject;	import com.gamejam.views.GameView;	/*	 * A Cloud... 	 */	public class Cloud extends GameObject	{			// in pixels per second		var _movementSpeed:Number;		var _movementDirection:Number;				public function Cloud()		{			super();						this._movementSpeed = Math.random()*10 + 25;			this._movementDirection = Math.round(Math.random());									this.moveable = true;						this.addEventListener(Event.ENTER_FRAME, this._update);		}				private function _update(e:Object):void		{ 						if(this.moveable) 			{				if(this._movementDirection == 0) this.x -= (this._movementSpeed/30);				else this.x += (this._movementSpeed/30);			}		}	}}